remove-width = 28px;

.sub-item {
  display: flex;
  margin-bottom: 0.4em;

  > span {
    display: flex;
    flex-grow: 2;
    position: relative;
  }

  .sub-title {
    background: darken(light-color, 10%);
    color: dark-color;
    flex-grow: 2;
    height: thumb-size;
    outline: none;
    text-decoration: none;

    &:hover,
    &:focus,
    &.active {
      background: darken(light-color, 20%);
    }
  }

  h3 {
    font-size: 1.1em;
    font-weight: 400;
    padding: 0.6em;

    .editing & {
      border-left: solid 1px darken(light-color, 20%);
    }
  }

  .editing & .custom-sub-item {
    a,
    .sub-item-icon {
      display: none;
    }
  }

  input {
    border-radius: 0;
    box-sizing: border-box;
    width: sidebar-width - thumb-size - remove-width;
  }

  input,
  .sub-item-icon.editable {
    display: none;

    .editing & {
      display: block;
    }
  }

  .sub-item-icon.editable {
    background: none;
    border: none;
    font-size: 1em;
    padding: 0;
  }

  .sub-item-icon,
  img {
    flex-shrink: 0;
  }

  img {
    background: light-color;
    height: thumb-size;
    width: thumb-size;
  }

  .num-videos {
    color: #666;
    display: none;
    margin: 0;
    padding: 0 0.6em;
  }

  .custom-sub-item .num-videos {
    display: block;
  }

  .remove {
    align-items: center;
    background: darken(light-color, 10%);
    border-radius: 0;
    border: none;
    color: warning-color;
    display: none;
    flex-shrink: 0;
    justify-content: center;
    text-align: center;
    text-decoration: none;
    width: remove-width;

    &:hover,
    &:focus {
      background: light-color;
      color: darken(warning-color, 20%);
    }

    .editing & {
      display: flex;
    }

    i {
      font-size: 1.4em;
    }
  }
}
