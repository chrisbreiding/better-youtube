.subs {
  display: flex;
  overflow-y: scroll;

  .subs-list {
    flex-shrink: 0;
    overflow-y: scroll;
    padding-right: 5px;
    width: sidebar-width + 5;

    > header {
      display: flex;
      flex-direction: row-reverse;
      padding: 0.6em 0;
    }

    &.is-empty > header {
      display: none;
    }
  }

  .all-subs {
    display: none;

    .thumb {
      background: #333;
      display: flex;
      flex-wrap: wrap;
      width: thumb-size;
    }

    img {
      height: (thumb-size / 2);
      width: (thumb-size / 2);
    }
  }

  .has-subs .all-subs {
    display: block;
  }

  .videos,
  .videos-empty {
    flex-grow: 2;
    min-width: 30em;
    overflow-y: scroll;
  }

  .loader {
    color: primary-color;
  }

  .subs-empty,
  .videos-empty {
    color: neutral-color;
    text-align: center;

    i {
      margin: 0 0.5em;
    }
  }

  .videos-empty {
    font-size: 1.2em;
    padding-top: 3em;
  }
}
