.subs {
  display: flex;
  overflow-y: hidden;
  height: 100%;

  > aside {
    flex-shrink: 0;
    overflow-y: scroll;
    padding-right: 1em;
    width: sidebar-width;

    > header {
      display: flex;
      padding: 0.6em;
    }
  }

  > main {
    flex-grow: 2;
    min-width: 30em;
    overflow-y: scroll;
  }

  .loader {
    color: primary-color;
    padding: 4em 0;
    text-align: center;

    i {
      font-size: 2em;
      margin: 0 0.2em;
    }
  }
}
