.subs {
  display: flex;
  overflow-y: scroll;

  .subs-list {
    flex-shrink: 0;
    overflow-y: scroll;
    padding-right: 5px;
    width: sidebar-width + 5;

    > header {
      display: flex;
      padding: 0.6em;
    }

    &.is-empty > header {
      display: none;
    }
  }

  .videos,
  .videos-empty {
    flex-grow: 2;
    min-width: 30em;
    overflow-y: scroll;
  }

  .loader {
    color: primary-color;
  }

  .subs-empty,
  .videos-empty {
    color: neutral-color;
    text-align: center;

    i {
      margin: 0 0.5em;
    }
  }

  .videos-empty {
    font-size: 1.2em;
    padding-top: 3em;
  }
}
