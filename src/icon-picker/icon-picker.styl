.icon-picker {
  display: flex;
  flex-direction: column;
  height: 100%;

  form {
    display: flex;
    flex-shrink: 0;
    flex-wrap: wrap;
    margin-bottom: 0.5em;
  }

  fieldset:first-child {
    margin-right: 1em;
  }

  label {
    display: block;
    margin-bottom: 0.4em;
  }

  .icons {
    box-shadow: inset 0 0 1em rgba(0,0,0,0.4);
    flex-shrink: 1;
    overflow-y: scroll;
    padding: 0.6em;
    text-align: center;
    width: 100%;
  }

  .picker-icon {
    border: none;
    display: inline-block;
    outline: none;

    &.chosen {
      background: darken(light-color, 20%);
    }
  }
}

.icon-picker-modal {
  .modal-box {
    height: 95%;
    width: 95%;
  }

  .modal-content {
    height: 100%;
    overflow: hidden;
  }
}
