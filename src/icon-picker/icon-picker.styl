.icon-picker {
  display: flex;
  flex-direction: column;
  height: 100%;

  form {
    display: flex;
    flex-shrink: 0;
    flex-wrap: wrap;
    margin-bottom: 0.5em;
  }

  fieldset {
    margin-bottom: 0.5em;
    margin-right: 1em;

    &:last-child {
      margin-right: 0;
    }
  }

  label {
    display: block;
    margin-bottom: 0.4em;
  }

  .fields {
    align-items: center;
    display: flex;

    i {
      font-size: 1.5em;
      margin-right: 0.3em;
    }
  }

  input[type='color'] {
    cursor: pointer;
    height: 2.2em;
    margin-right: 0.4em;
    padding: 0;
    width: 2.2em;
  }

  .icons {
    box-shadow: inset 0 0 1em rgba(0,0,0,0.4);
    flex-shrink: 1;
    overflow-y: scroll;
    padding: 0.6em;
    text-align: center;
    width: 100%;
  }

  .empty-icons {
    text-align: center;
  }

  .picker-icon {
    border: none;
    display: inline-block;
    outline: none;

    &.chosen {
      background: darken(light-color, 20%);
    }
  }
}

.icon-picker-modal {
  .modal-box {
    height: 95%;
    width: 95%;
  }

  .modal-content {
    height: 100%;
    overflow: hidden;
  }
}
