thumb-width = 10em;

.video {
  border-top: solid 1px darken(light-color, 20%);
  display: flex;
  padding: 0.6em;

  &.watched {
    background: darken(light-color, 30%);
    opacity: 0.4;
  }

  &:first-of-type {
    border-top: none;
  }

  img {
    flex-shrink: 0;
    height: 90px;
    margin-right: 1em;
    width: 160px;
  }

  > div {
    flex-grow: 2;
  }

  h4 {
    font-size: 1.1em;
    margin-top: 0;
  }

  .pub-date {
    float: right;
    margin: 0.6em 0;
    text-align: right;

    .formatted {
      color: #a4a4a4;
      font-size: 0.8em;
    }
  }

  .duration {
    background: #212121;
    border-radius: 3px;
    color: #f8f8f8;
    float: left;
    margin-right: 1em;
    padding: 0.4em;

    i {
      font-size: 1.3em;
    }
  }

  a.toggle-watched {
    float: left;
    margin: 1em 0;
    text-decoration: none;
  }
}

a.play-video {
  color: #FFF;
  display: block;
  float: left;
  position: relative;
  text-decoration: none;

  img {
    display: block;
  }

  i {
    background: rgba(0,0,0,0);
    display: block;
    font-size: 4em;
    height: 5em;
    line-height: 5em;
    opacity: 0.7;
    position: absolute;
    top: 0;
    text-align: center;
    transition: all 0.25s ease-in-out;
    width: thumb-width;
  }

  &:hover i,
  &:focus i {
    background: rgba(0,0,0,0.5);
    opacity: 1.0;
  }
}
