.video {
  display: flex;
  padding: 0.6em;

  &.watched {
    background: darken(light-color, 30%);
    opacity: 0.4;
  }

  > div {
    flex-grow: 2;
  }

  h4 {
    font-size: 1.1em;
    margin-top: 0;
  }

  .pub-date {
    float: right;
    margin: 0.6em 0;
    text-align: right;

    .formatted {
      color: #a4a4a4;
      font-size: 0.8em;
    }
  }

  .duration {
    background: #212121;
    border-radius: 3px;
    color: #f8f8f8;
    float: left;
    margin-right: 1em;
    padding: 0.4em;

    i {
      font-size: 1.3em;
    }
  }

  a.toggle-watched {
    float: left;
    margin: 1em 0;
    text-decoration: none;
  }
}

thumb-height = 90px;
thumb-width = 160px;

.play-video {
  background: none;
  border: none;
  border-radius: 0;
  color: #FFF;
  display: block;
  flex-shrink: 0;
  height: thumb-height;
  margin-right: 1em;
  padding: 0;
  position: relative;
  text-decoration: none;
  width: thumb-width;

  img {
    display: block;
    height: thumb-height;
    width: thumb-width;
  }

  i {
    background: rgba(0,0,0,0);
    bottom: 0;
    display: block;
    font-size: 4em;
    left: 0;
    line-height: thumb-height;
    opacity: 0.7;
    position: absolute;
    right: 0;
    top: 0;
    text-align: center;
    transition: all 0.25s ease-in-out;
  }

  &:hover,
  &:focus {
    color: #FFF;

    i {
      background: rgba(0,0,0,0.5);
      opacity: 1.0;
    }
  }
}
