thumb-height = 90px;
thumb-width = 160px;

.video {
  padding: 0.6em;

  &.watched {
    background: darken(light-color, 30%);
    opacity: 0.4;
  }

  .contents {
    display: flex;
  }

  aside {
    flex-shrink: 0;
    margin-right: 1em;
    width: thumb-width;
  }

  main {
    flex-grow: 2;
  }

  h4 {
    font-size: 1.1em;
    margin-top: 0;
  }

  .pub-date {
    float: right;
    margin: 0.6em 0;
    text-align: right;

    .formatted {
      color: #a4a4a4;
      font-size: 0.8em;
    }
  }

  .duration {
    background: #212121;
    border-radius: 3px;
    color: #f8f8f8;
    float: left;
    margin-right: 1em;
    padding: 0.4em;

    i {
      font-size: 1.3em;
    }
  }

  a.toggle-watched {
    float: left;
    margin: 1em 0;
    text-decoration: none;
  }

  .video-marker {
    display: none;
    margin-bottom: 0.5em;

    &:before {
      border-bottom: solid 1px primary-color;
      content: '';
      display: block;
      flex-grow: 2;
      height: 0.65em;
    }

    .remove-video-marker {
      color: primary-color;
      cursor: pointer;
      flex-grow: 0;
      margin-left: 5px;
    }
  }

  &.is-marked .video-marker {
    display: flex;
  }
}

.play-video {
  background: none;
  border: none;
  border-radius: 0;
  color: #FFF;
  display: block;
  height: thumb-height;
  overflow: hidden;
  padding: 0;
  position: relative;
  text-decoration: none;
  width: thumb-width;

  img {
    display: block;
    height: thumb-height;
    width: thumb-width;
  }

  .channel {
    bottom: 0;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
    height: (thumb-height / 2);
    left: 0;
    position: absolute;
    width: (thumb-height / 2);
  }

  i {
    background: rgba(0,0,0,0);
    bottom: 0;
    display: block;
    font-size: 4em;
    left: 0;
    line-height: thumb-height;
    opacity: 0.7;
    position: absolute;
    right: 0;
    top: 0;
    text-align: center;
    transition: all 0.25s ease-in-out;
  }

  &:hover,
  &:focus {
    color: #FFF;

    i {
      background: rgba(0,0,0,0.5);
      opacity: 1.0;
    }
  }
}
