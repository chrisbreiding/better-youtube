.modal {
  align-items: center;
  background: rgba(0, 0, 0, 0.8);
  bottom: 0;
  display: flex;
  left: 0;
  justify-content: center;
  position: fixed;
  right: 0;
  top: 0;
}

.modal-box {
  background: light-color;
  max-height: 95%;
  max-width: 95%;
  overflow-y: scroll;
  padding: 2em;
  position: relative;
}

.modal-close {
  background: none;
  border-radius: 0 0 0 3px;
  color: dark-color;
  position: absolute;
  right: 0;
  top: 0;

  &:hover,
  &:focus {
    background: darken(light-color, 10%);
  }
}
