.now-playing {
  align-items: center;
  background: #000;
  background: linear-gradient(to bottom, #222 0%, #000 100%);
  display: flex;
  flex-shrink: 0;
  position: relative;
  justify-content: center;

  .cover {
    display: none;
    bottom: 0;
    left: 0;
    position: absolute;
    right: 0;
    top: 0;

    .is-resizing & {
      display: block;
    }
  }


  button {
    background: #000;
    border: none;
    color: darken(light-color, 20%);
    position: absolute;
    right: 0;

    &:hover,
    &:focus {
      color: #FFF;
    }

    i {
      font-size: 1.4em;
    }
  }

  .close {
    border-radius: 0 0 0 3px;
    top: 0;
  }

  .toggle-auto-play {
    border-radius: 3px 0 0 0;
    bottom: 0;

    &.enabled {
      color: lighten(action-color, 20%);

      &:hover,
      &:focus {
        color: lighten(action-color, 40%);
      }
    }
  }
}
