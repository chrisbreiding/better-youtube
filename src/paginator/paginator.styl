.paginator {
  display: flex;
  justify-content: space-between;
  margin: 0.6em;

  .paginator-button {
    border: solid 1px darken(light-color, 20%);
    display: block;
    font-size: 0.9em;
    min-width: 5em;
    padding: 0.4em 0.6em;
    text-align: center;
    text-decoration: none;

    &:hover,
    &:focus {
      background: darken(light-color, 10%);
    }

    &:first-child {
      border-radius: 3px 0 0 3px;
    }

    &:last-child {
      border-radius: 0 3px 3px 0;
    }

    &.disabled {
      visibility: hidden;
    }
  }

  > span {
    display: block;
    font-size: 0.9em;
    min-width: 5em;
    padding: 0.4em 0.6em;
  }

  .search {
    display: flex;

    input {
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }

    button {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
      border-left: none;
    }
  }
}
